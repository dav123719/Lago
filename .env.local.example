# ============================================
# LAGO E-Commerce Environment Variables
# ============================================
# Copy this file to .env.local and fill in all values
# DO NOT commit .env.local to git

# ============================================
# APP CONFIGURATION
# ============================================

# Base URL for the application (used for OAuth callbacks, Stripe webhooks)
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production: https://lago.lv

# Environment
NODE_ENV=development

# ============================================
# SUPABASE (Database + Auth)
# ============================================

# Get these from your Supabase project dashboard: https://app.supabase.io
# Project Settings → API

# Client-side (safe to expose)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIs...

# Server-side (NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIs...

# ============================================
# SANITY (Headless CMS)
# ============================================

# Get these from https://www.sanity.io/manage
# Project Settings → API

# Client-side (safe to expose)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Server-side (NEVER expose to client)
# Generate at: Project Settings → API → Tokens
SANITY_API_READ_TOKEN=sk... # Read-only token for server
SANITY_API_WRITE_TOKEN=sk... # Write token for admin operations

# Webhook secret for Sanity → Supabase sync
# Generate a random string (openssl rand -hex 32)
SANITY_WEBHOOK_SECRET=your_webhook_secret_here

# Preview mode secret
SANITY_PREVIEW_SECRET=your_preview_secret_here

# ============================================
# STRIPE (Payments)
# ============================================

# Get these from https://dashboard.stripe.com/apikeys

# Client-side (safe to expose)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Server-side (NEVER expose to client)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_... # From webhook endpoint settings

# Optional: Stripe Connect settings for marketplace
# STRIPE_CONNECT_CLIENT_ID=

# ============================================
# OAUTH PROVIDERS
# ============================================

# Google OAuth
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
# Create app at: https://developers.facebook.com/apps
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ============================================
# SHIPPING CARRIERS (Baltic)
# ============================================

# Omniva (Estonia/Latvia/Lithuania)
# Sign up at: https://www.omniva.ee/business/ or contact your account manager
OMNIVA_API_KEY=your_omniva_api_key
OMNIVA_API_URL=https://www.omniva.ee/api/

# DPD
# Sign up at: https://www.dpd.com/ or contact Baltic representative
DPD_API_KEY=your_dpd_api_key
DPD_API_URL=https://api.dpd.lv/

# Latvijas Pasts
# Sign up at: https://www.pasts.lv/ or contact business support
LATVIJAS_PASTS_API_KEY=your_pasts_api_key
LATVIJAS_PASTS_API_URL=https://api.pasts.lv/

# ============================================
# EMAIL SERVICE (Placeholder - choose provider)
# ============================================

# Option 1: SendGrid
# SENDGRID_API_KEY=SG...

# Option 2: Mailgun
# MAILGUN_API_KEY=key-...
# MAILGUN_DOMAIN=mg.lago.lv

# Option 3: AWS SES
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_REGION=eu-west-1

# Option 4: Resend
# RESEND_API_KEY=re_...

# Default from address
FROM_EMAIL=orders@lago.lv
FROM_NAME=LAGO Stone & Furniture

# ============================================
# ANALYTICS (Optional)
# ============================================

# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Facebook Pixel
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=...

# Hotjar
NEXT_PUBLIC_HOTJAR_ID=...
NEXT_PUBLIC_HOTJAR_SNIPPET_VERSION=6

# ============================================
# MONITORING (Optional)
# ============================================

# Sentry
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_AUTH_TOKEN=...

# LogRocket
NEXT_PUBLIC_LOGROCKET_APP_ID=...

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_LIVE_CHAT=false
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_WISHLIST=false

# ============================================
# SECURITY
# ============================================

# CSRF Protection
CSRF_SECRET=your_csrf_secret_here

# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=60

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Skip build-time type checking (for faster dev builds)
SKIP_TYPE_CHECK=false

# Debug mode (verbose logging)
DEBUG=false
